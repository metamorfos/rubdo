#!/usr/bin/env ruby


begin 
  require 'rubdo'
  require 'abbrev'
rescue LoadError
  require 'rubygems'
  require 'rubdo'
  require 'abbrev'
end

cli = Rubdo::CLI.new
methods = Rubdo::CLI.public_instance_methods(false).sort.map(&:to_s).abbrev
cli.list if ARGV[0].nil?
cli.send methods[ARGV[0]] unless ARGV[0].nil?
cli.save
